@{
    ViewBag.Title = "Home Page";
}

<div class="container py-5">
    <!-- Welcome Section -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-dark">Employee Management System</h1>
        <p class="lead text-muted">
            Manage payroll and verify voting eligibility with ease.
        </p>
    </div>

    <!-- Feature Cards -->
    <div class="row g-4">
        <!-- Payroll Card -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 text-center border-0">
                <div class="card-body p-4">
                    <h3 class="card-title text-dark">💼 Payroll System</h3>
                    <p class="card-text text-muted">
                        Calculate employee salaries, deductions, and net pay quickly.
                    </p>
                    @Html.ActionLink("Go to Payroll", "Salary", "Payroll", null, new { @class = "btn btn-success btn-lg mt-3 px-4" })
                </div>
            </div>
        </div>

        <!-- Voting Card -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 text-center border-0">
                <div class="card-body p-4">
                    <h3 class="card-title text-dark">🗳 Voting System</h3>
                    <p class="card-text text-muted">
                        Check if a person is eligible to vote based on age and registration.
                    </p>
                    @Html.ActionLink("Go to Voting", "Age", "Voting", null, new { @class = "btn btn-primary btn-lg mt-3 px-4" })
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Light Mode Styling -->
<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', sans-serif;
    }

    .card {
        background-color: #ffffff;
        border-radius: 8px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }
</style>