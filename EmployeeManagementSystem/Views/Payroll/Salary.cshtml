@{
    ViewBag.Title = "Payroll System";
}

<div class="container py-5">
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <h2 class="mb-4 text-primary">💼 Payroll System</h2>

            @using (Html.BeginForm("Salary", "Payroll", FormMethod.Post))
            {
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Employee ID</label>
                        <input name="employeeID" class="form-control" placeholder="Enter Employee ID" required />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Employee Name</label>
                        <input name="employeeName" class="form-control" placeholder="Enter Employee Name" required />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Position</label>
                        <input name="position" class="form-control" placeholder="Enter Position" required />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Gender</label>
                        <select name="gender" class="form-select" required>
                            <option value="">Select Gender</option>
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Rate Per Day</label>
                        <input name="ratePerDay" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">No. of Days Worked</label>
                        <input name="daysWorked" type="number" class="form-control" placeholder="0" required />
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary px-4">Calculate</button>
                    <a href="/" class="btn btn-outline-secondary ms-2 px-4">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>